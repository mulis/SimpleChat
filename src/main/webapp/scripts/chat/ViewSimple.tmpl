<style>
.chat-container {
    position: relative;
    top: 0px;
    left: 0px;
    width: 100%;
    height: 100%;
    border: 0px;
    overflow: hidden;
    background-color: silver;
    font-family: sans-serif;
    font-size: medium;
}
.chat-container input, .chat-container .chat-message-input {
    font-family: sans-serif;
    font-size: medium;
}
.chat-enter-view {
    position:absolute;
    top: 0px;
    height: auto;
    bottom: 0px;
    left: 0px;
    width: auto;
    right: 0px;
    margin: 0px
    border: 0px;
    padding: 1em;
    overflow: hidden;
    display: block;
    visibility: visible;
}
.chat-welcome-row {
    height: 3em;
    margin: 0px
    border: 0px;
    padding: 0em;
}
.chat-main-view {
    position:absolute;
    top: 0px;
    height: auto;
    bottom: 0px;
    left: 0px;
    width: auto;
    right: 0px;
    border: 0px;
    overflow: hidden;
    display: none;
    visibility: visible;
}
.chat-main-view > * {
    margin: 0px;
    border: 0px;
    padding: 2px;
    background-color: snow;
}
.chat-messages-output {
    position: absolute;
    top: 4px;
    height: auto;
    bottom: 102px;
    left: 4px;
    width: auto;
    right: 202px;
    overflow: hidden;
    overflow-y: scroll;
}
.chat-users-output {
    position: absolute;
    top: 4px;
    height: auto;
    bottom: 2px;
    left: auto;
    width: 190px;
    right: 4px;
    overflow: hidden;
    overflow-y: scroll;
}
.chat-message-input {
    position: absolute;
    top: auto;
    height: 96px;
    bottom: 2px;
    left: 4px;
    width: auto;
    right: 202px;
    font-family: serif;
    font-size: medium;
}
.chat-status-output-container {
    position:absolute;
    top: auto;
    height: 2em;
    bottom: 0px;
    left: 0px;
    width: auto;
    right: 0px;
    border: 0px;
    overflow: hidden;
}
.chat-status-output {
    position:absolute;
    top: 2px;
    height: auto;
    bottom: 4px;
    left: 4px;
    width: auto;
    right: 4px;
    margin: 0px;
    border: 0px;
    padding: 2px;
    overflow: hidden;
    background-color: snow;
}
.chat-status-output > div {
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    width: auto;
    height: 1em;
    margin: auto;
    padding: 2px;
}
</style>
<div class="chat-container">
    <div class="chat-enter-view">
        <h1 class="chat-welcome-label">Welcome to No Password Chat</h1>
        <div class="chat-welcome-row">
            <label>Nickname: </label><input type="text" class="chat-nickname-input" />
        </div>
        <div class="chat-welcome-row">
            <label>Color: </label><input type="text" class="chat-color-input" />
        </div>
        <!--div class="chat-welcome-row"-->
            <!--div class="chat-color-input"></div-->
        <!--/div-->
        <div class="chat-welcome-row">
            <input type="button" class="chat-enter-button" value="Enter" /><br />
        </div>
    </div>
    <div class="chat-main-view">
        <div class="chat-messages-output"></div>
        <div class="chat-users-output"></div>
        <div class="chat-message-input"></div>
    </div>
</div>
